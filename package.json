{
  "name": "invoice-converter-mac",
  "version": "1.0.0",
  "description": "Invoice Converter - Desktop Application for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac-arm": "electron-builder --mac --arm64",
    "build:mac-x64": "electron-builder --mac --x64",
    "build:mac-universal": "electron-builder --mac --universal"
  },
  "build": {
    "appId": "com.en16931.converter.mac",
    "productName": "Invoice Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "lib/**/*",
      "assets/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.business",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "darkModeSupport": true
    },
    "dmg": {
      "background": "assets/dmg-background.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    }
  },
  "author": "EN16931 Converter",
  "license": "MIT",
  "dependencies": {
    "xml2js": "^0.6.2",
    "xmlbuilder2": "^3.1.1",
    "papaparse": "^5.4.1",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
